CC=@CC@
BINDIR=@BINDIR@
CFLAGS=-Wall -O -fPIE -pie
VPATH=@abs_srcdir@
TARGET=mcexec

all: $(TARGET)

mcexec: mcexec.c
	$(CC) $(CFLAGS) $(EXTRA_CFLAGS) -pthread -o $@ $^ $(EXTRA_OBJS)

clean:
	$(RM) $(TARGET) *.o

.PHONY: all clean install

install:
	mkdir -p -m 755 $(BINDIR)
	install -m 4755 mcexec $(BINDIR)

